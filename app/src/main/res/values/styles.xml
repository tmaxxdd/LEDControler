<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ColoredButton" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@drawable/custom_button</item>
        <item name="rd_rippleColor">@color/colorAccent</item>
        <item name="rd_leftPadding">16dp</item>
        <item name="rd_topPadding">8dp</item>
        <item name="rd_rightPadding">16dp</item>
        <item name="rd_bottomPadding">8dp</item>
        <item name="rd_delayClick">afterRelease</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="AlertDialogCustom">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
    </style>

    <style name="DarkSpinnerItem" parent="Material.Drawable.Ripple.Wave">
        <item name="android:background">@color/colorPrimary</item>
        <item name="rd_rippleColor">@color/colorAccent</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">2dp</item>
        <item name="rd_delayClick">afterRelease</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
